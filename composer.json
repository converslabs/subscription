{
    "name": "wpsubscription/plugin",
    "description": "WPSubscription - Subscription & Recurring Payment Plugin for WooCommerce",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "SpringDevs\\Subscription\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=\"Unit Tests\"",
        "test:integration": "phpunit --testsuite=\"Integration Tests\"",
        "test:coverage": "phpunit --coverage-html tests/logs/coverage",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
