# Colors
GREEN="\033[0;32m"
BLUE="\033[0;34m"
YELLOW="\033[1;33m"
RED="\033[0;31m"
NC="\033[0m" # No Color


print_box() {
  local color=$1
  local message=$2
  echo ""
  echo "${color}╔════════════════════════════════════════════════════════╗${NC}"
  echo "${color}║                                                        ║${NC}"
  printf "${color}║   %s%*s${color}   ║${NC}\n" "$message" $((50 - ${#message})) ""
  echo "${color}║                                                        ║${NC}"
  echo "${color}╚════════════════════════════════════════════════════════╝${NC}"
  echo ""
}


print_box "$YELLOW" "Running pre-commit tasks..."

# Commands to run before commit
yarn lint-staged

# End box
print_box "$GREEN" "Finished pre-commit tasks!"